<% include partials/_header %>

<div class="col-md-6">
  <div class="card-body">

    <form action="/add" method="POST">
      <div class="form-group">
        <input type="text" name="name" placeholder="Има Заказчика" class="form-control" autofocus>
      </div>
      <div class="form-group">
        <input type="text" name="phone" placeholder="Номер Телефона" class="form-control">
      </div>
      <div class="form-group">
        <input type="text" name="description" placeholder="Описание работы" class="form-control">
      </div>
      <div class="form-group">
        <input type="text" name="order_number" placeholder="Номер Заказа" class="form-control">
      </div>
      <div class="form-group">
        <input type="text" name="seller" placeholder="Поставщик" class="form-control">
      </div>

      <button type="submit" class="btn btn-primary">
       Добавить Заказ
      </button>
    </form>
  </div>
</div>
      <table class="table table-bordered table-hover display" id="orders">
        <thead>
          <tr>
            <td>ID</td>
            <td>Заказчик</td>
            <td>Номер</td>
            <td>Описание работ</td>
            <td>Номер заказа</td>
            <td>Поставщик</td>
            <td>Поставщик</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= data[i].id %></td>
                <td><%= data[i].name %></td>
                <td><%= data[i].phone %></td>
                <td><%= data[i].description %></td>
                <td><%= data[i].order_number %></td>
                <td><%= data[i].seller %></td>
                <td>
                  <a href="/update/<%= data[i].id %>" class="btn btn-info">Изменить</a>
                  <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Удалить</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>


  </div>
</div>

<% include partials/_footer %>
